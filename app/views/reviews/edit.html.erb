<div class="col-md-6 col-md-offset-3">
  <div class="edit-review-form">
      <h1>Edit Review</h1>
      <%= simple_form_for([@restaurant, @review]) do |f| %>
      <div id="rating-form">
				<label>Rating</label>
      </div>
        <%= f.input :comment %>
		  	<%= f.button :submit, :class => "btn-custom2" %>
		    <% end %>
        <%= link_to "Back to Home", root_path, class: "btn btn-custom" %>
     </div>
  </div>
<script>
     	$('#rating-form').raty({
	  	path: 'public/assets/',
		  scoreName: 'review[rating]'
	   });
</script>
